@page "/example3"

<h3>Example 3 - Blazor Controlled 3D Cube</h3>

<div id="scene">
    <div id="camera">
        <div id="rotate" style="transform: @(rotation);">
            <div id="cube">
                <div class="cube-face" id="face-north">North</div>
                <div class="cube-face" id="face-south">South</div>
                <div class="cube-face" id="face-east">East</div>
                <div class="cube-face" id="face-west">West</div>
                <div class="cube-face" id="face-top">Top</div>
                <div class="cube-face" id="face-bottom">Bottom</div>
            </div>
        </div>
    </div>
</div>

<div>

    <button class="btn btn-primary" @onclick='() => rotation = "rotateX(0)"'>Top</button>
    <button class="btn btn-primary" @onclick='() => rotation = "rotateX(180deg)"'>Bottom</button>
    <button class="btn btn-primary" @onclick='() => rotation = "rotateX(-90deg)"'>North</button>
    <button class="btn btn-primary" @onclick='() => rotation = "rotateX(90deg)"'>South</button>
    <button class="btn btn-primary" @onclick='() => rotation = "rotateY(-90deg)"'>East</button>
    <button class="btn btn-primary" @onclick='() => rotation = "rotateY(90deg)"'>West</button>

</div>

<style>

    /* remove the comments to animate the square */

    #scene {
        width: 600px;
        height: 400px;
        position: relative;
        border: 1px solid black;
        perspective: 1000px;
        transform-style: preserve-3d;
    }

        #scene div {
            position: absolute;
            transform-style: preserve-3d;
        }

    #camera {
        left: 50%;
        top: 50%;
    }

    .cube-face {
        width: 100px;
        height: 100px;
        background-color: red;
        transform-origin: center;
    }

    #rotate {
        transition: transform linear 1s;
    }

    #cube {
        transform: translate(-50px, -50px);
    }

    .cube-face {
        border : 2px solid black;
    }

    #face-north {
        background: #f00;
        transform: rotateX(90deg) translateZ(50px);
    }

    #face-south {
        transform: rotateX(-90deg) translateZ(50px);
        background: #ff0;
    }

    #face-east {
        transform: rotateY(90deg) translateZ(50px);
        background: #0f0;
    }

    #face-west {
        transform: rotateY(-90deg) translateZ(50px);
        background: #0ff;
    }

    #face-top {
        transform: rotateX(0deg) translateZ(50px);
        background: #00f;
    }

    #face-bottom {
        transform: rotateX(180deg) translateZ(50px);
        background: #f0f;
    }

</style>

@code {

    private string rotation = "rotateX(0) rotateZ(0)";
}